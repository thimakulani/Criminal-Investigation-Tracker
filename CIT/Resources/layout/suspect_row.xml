<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:padding="5dp"
            android:layout_toStartOf="@+id/row_suspect_btn_action"
            tools:ignore="MissingDimension"
            >
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/row_suspect_name"
                android:layout_weight="25"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/row_suspect_surname"
                android:layout_weight="25"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/row_suspect_relation"
                android:layout_weight="25"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/row_suspect_evidence"
                android:layout_weight="25"
                />
        </LinearLayout>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/txt_action_text_view"
            android:id="@+id/row_suspect_btn_action"
            android:layout_toStartOf="@+id/row_suspect_btn_delete"
            android:text="@string/txt_action"
            android:padding="5dp"
            android:layout_margin="3dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/txt_delete_text_view"
            android:id="@+id/row_suspect_btn_delete"
            android:layout_alignParentEnd="true"
            android:text="@string/txt_delete"
            android:padding="5dp"
            android:layout_margin="3dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/blue_grey_500"
        android:layout_height="1dp"/>
</LinearLayout>