<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relative_parent_row"
    android:layout_margin="5dp"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:padding="5dp"
            tools:ignore="MissingDimension"
            android:layout_toLeftOf="@+id/row_officer_btn_action"
            >
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/row_officer_name"
                android:layout_weight="50"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/row_officer_surname"
                android:layout_weight="50"
                />
            
        </LinearLayout>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_officer_btn_action"
            android:background="@drawable/txt_action_text_view"
            android:layout_alignParentEnd="true"
            android:text="@string/txt_action"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_margin="3dp"
            android:textColor="@color/color_white"
        />
    </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:background="@color/blue_grey_500"
        android:layout_height="1dp"/>
</LinearLayout>