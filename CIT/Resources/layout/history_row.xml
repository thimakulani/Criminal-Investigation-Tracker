<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
     >
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1"
            android:weightSum="100"
            android:padding="5dp"
            android:layout_toStartOf="@+id/btn_history_action"
            tools:ignore="MissingDimension"
        >
            <com.google.android.material.textview.MaterialTextView
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:textColor="#2f5b99"
                android:layout_height="wrap_content"
                android:id="@+id/row_histry_case_name"
                android:layout_margin="3dp"
                android:layout_weight="20"
             
            />
            <com.google.android.material.textview.MaterialTextView
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_histry_dates_created"
                android:textColor="#2f5b99"
                android:layout_margin="3dp"
                android:layout_weight="20"
             
            />
            <com.google.android.material.textview.MaterialTextView
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_histry_officer_names"
                android:textColor="#2f5b99"
                android:layout_margin="3dp"
                android:layout_weight="20"
             
            />
            
            <com.google.android.material.textview.MaterialTextView
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_histry_status"
                android:layout_weight="20"
                android:textColor="#2f5b99"
                android:layout_margin="3dp"
            />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/btn_history_action"
        />
    </RelativeLayout>
</LinearLayout>
